@{
    ViewData["Title"] = "Delete Bowler";
}

@model Bowler

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete appointment for @Model.BowlerFirstName @Model.BowlerLastName?</h3>

<form method="post" asp-action="DeleteBowler">
    <button type="submit" class="btn-primary">Delete</button>
    <a asp-controller="Home" asp-action="ViewBowlers" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="BowlerID" />
</form>
